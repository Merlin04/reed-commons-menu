(executable
 (public_name menu)
 (preprocess (pps ppx_deriving.std ppx_deriving_yojson ppx_fields_conv ppx_stable))
 (name main)
 (libraries re lwt cohttp cohttp-lwt-unix dream dream-livereload timedesc timedesc-tzdb.full timedesc-tzlocal.unix redis-lwt))

(rule
 (targets template.ml)
 (deps template.eml.ml)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))

(rule
 (target assets.ml)
 (deps (source_tree ../assets))
 (action (with-stdout-to %{null}
  (run ocaml-crunch -m plain ../assets -o %{target}))))